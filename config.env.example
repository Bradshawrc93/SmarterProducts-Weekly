# =============================================================================
# SMARTERPRODUCTS WEEKLY AUTOMATION - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# For Heroku deployment, set these as Config Vars in your Heroku dashboard

# =============================================================================
# JIRA CONFIGURATION
# =============================================================================
# Your Jira domain (e.g., https://yourcompany.atlassian.net)
JIRA_BASE_URL=https://YOUR_DOMAIN.atlassian.net

# Jira API token (create at: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your_jira_api_token_here

# Your Jira email address
JIRA_EMAIL=your_email@company.com

# Comma-separated list of Jira board IDs or project keys
JIRA_BOARDS=PROJ-1,PROJ-2,PROJ-3

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================
# Google Service Account JSON (create at: https://console.cloud.google.com/iam-admin/serviceaccounts)
# For Heroku: paste the entire JSON content as a single line
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project",...}

# Google Drive folder ID where reports will be stored
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Google Sheets IDs - comma-separated list of different spreadsheets
GOOGLE_SHEETS_IDS=sheet_id_1,sheet_id_2,sheet_id_3,sheet_id_4

# Tab detection strategy: "auto" (detect programmatically) or specific tab names
GOOGLE_SHEETS_TAB_STRATEGY=auto

# Optional: Specific tab names to look for (only used if TAB_STRATEGY is not "auto")
GOOGLE_SHEETS_TABS=Weekly Metrics,KPIs,Issues

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI model to use
OPENAI_MODEL=gpt-4

# =============================================================================
# EMAIL CONFIGURATION (SMTP - Direct Email)
# =============================================================================
# SMTP Server Configuration
# For Gmail: smtp.gmail.com
# For Outlook: smtp-mail.outlook.com
# For other providers: check your email provider's SMTP settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# SMTP Authentication
# For Gmail: Use an App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email addresses for notifications (comma-separated)
PREVIEW_EMAIL_RECIPIENTS=your_email@company.com
FINAL_EMAIL_RECIPIENTS=stakeholder1@company.com,stakeholder2@company.com

# From email address (usually same as SMTP_USERNAME)
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Weekly Reports System

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL (Heroku provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/smarterproducts_weekly

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
# Timezone for scheduling (default: America/New_York)
TIMEZONE=America/New_York

# Preview generation time (Tuesday evening)
PREVIEW_SCHEDULE=22 # 10 PM

# Final report time (Wednesday morning)  
FINAL_SCHEDULE=8 # 8 AM
